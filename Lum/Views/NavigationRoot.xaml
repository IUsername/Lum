<Page
    x:Class="Lum.Views.NavigationRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lum"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded">

    <Grid>

        <NavigationView x:Name="NavView" PaneDisplayMode="Top" SelectionChanged="NavView_OnSelectionChanged"
                        SelectionFollowsFocus="Enabled" IsBackButtonVisible="Collapsed"
                        Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" >
            <NavigationView.MenuItems>
                <NavigationViewItem ToolTipService.ToolTip="Dashboard" Icon="ViewAll" x:Name="DashboardItem" />
                <NavigationViewItem ToolTipService.ToolTip="Desktop" Icon="GoToStart" x:Name="DesktopItem" />
                <NavigationViewItem ToolTipService.ToolTip="Game Stream" Icon="SlideShow" x:Name="GameStreamItem"/>
            </NavigationView.MenuItems>
            <Frame x:Name="AppNavFrame" Navigated="AppNavFrame_Navigated" />
        </NavigationView>
        <TextBlock Text="Lum" IsHitTestVisible="False" Margin="15 5" />
    </Grid>
</Page>